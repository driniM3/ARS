@model IEnumerable<ARS.Models.BookedFlights>

@{
    if(!User.Identity.IsAuthenticated){
        <h2>Please sign in or register to view your flights.</h2>
    }
    else{
    ViewBag.Title = "Index";


<h2>All Reservations</h2>

<table width="100%" cellpadding="10">
    <tr>
        <th>
           Flight #
        </th>
        <th>
           Origin
        </th>
        <th>
           Desination
        </th>
        <th>
           Date
        </th>
        <th>
           Time
        </th>
        <th>
           Type
        </th>
        
         <th>
          # Seats
        </th>
        <th>
           Class
        </th>
        <th>
           Total
        </th>
        <th>Booked By</th>
        <th>
           Actions
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.FlightNumber)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Origin)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Destination)
        </td>
        
        <td>
            @Html.DisplayFor(modelItem => item.Date)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DepartureTime)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Type)
        </td>
       
        <td>
            @Html.DisplayFor(modelItem => item.Seats)
        </td>
         <td>
            @Html.DisplayFor(modelItem => item.Class)
        </td>
         <td>
            $@Html.DisplayFor(modelItem => item.Price)
        </td>
        <td>
            $@Html.DisplayFor(modelItem => item.BookedBy)
        </td>
        <td>            
            @Html.ActionLink("Details", "Details", new { id=item.ID }) |
            @Html.ActionLink("Unbook", "Delete", new { id=item.ID })
        </td>
    </tr>
    
}

</table>
    
}
}
